{
	"$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
	"files": {
		"include": ["src/**/*.ts", "biome.json", "package.json"]
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "asNeeded",
			"indentWidth": 2,
			"quoteStyle": "single",

			"semicolons": "asNeeded"
		},
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	},
	"json": {
		"formatter": {
			"indentWidth": 2
		},
		"parser": {
			"allowComments": true,
			"allowTrailingCommas": false
		}
	},

	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"organizeImports": {
		"enabled": true
	}
}